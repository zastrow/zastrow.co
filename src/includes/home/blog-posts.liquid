
{% for post in collections.posts limit:10 %}
<article>
	<h2>
		<a href="{{ post.url }}">
			{{ post.data.title }}
		</a>
	</h2>
	<time datetime="{{ post.data.date }}">
		{{ post.data.date | date: "%e %B %Y" }}
	</time>
	{% if post.data.preview %}
	<p>
		{{ post.data.preview }}
	</p>
	{% endif %}
</article>
{% endfor %}

<a href="/posts">More Blog Posts</a>
