<nav aria-label="Page {{ pagination.pageNumber | plus: 1 }} of {{ pagination.pages.size }} Pagination" class="cmp-pagination">
	<a {% if pagination.href.previous %} href="{{pagination.href.previous}}" aria-label="Go to previous set on page {{ pagination.pageNumber | minus: 1 }}"{% endif %} class="cmp-pagination__link cmp-pagination__link--previous">
		<svg viewBox="0 0 20 24" height="24" width="20" class="cmp-pagination__icon">
			<path d="M14 2L2 12L14 22" fill="none" stroke="currentcolor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" vector-effect="non-scaling-stroke" />
		</svg>
	</a>

	<p class="cmp-pagination__status">Page <strong>{{ pagination.pageNumber | plus: 1 }}</strong> of <strong>{{ pagination.pages.size }}</strong></p>

	<a {% if pagination.href.next %} href="{{pagination.href.next}}" aria-label="Go to next set on page {{ pagination.pageNumber | plus: 1 }}"{% endif %} class="cmp-pagination__link cmp-pagination__link--next">
		<svg viewBox="0 0 20 24" height="24" width="20" class="cmp-pagination__icon">
			<path d="M6 2L18 12L6 22" fill="none" stroke="currentcolor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" vector-effect="non-scaling-stroke" />
		</svg>
	</a>
</nav>
