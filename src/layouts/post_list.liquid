---
layout-name: post_list
pagination:
  data: collections.posts
  size: 10
  alias: posts
permalink: "posts/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber | plus: 1 }}/{% endif %}index.html"
---
{% layout "default-layout" %}

{%- block skip_links %}
{% endblock -%}

{%- block main %}

	{% include 'list-header' %}

	{% include 'pagination' %}

	{%- for post in posts -%}
		<h2>
			<a href="{{ post.url }}">
				{{ post.data.title }}
			</a>
		</h2>
		<p>
			<time datetime="{{ post.data.date | date: "%Y-%m-%d" }}">
				{{ post.data.date | date: "%d %B %Y" }}
			</time>
		</p>
	{% endfor %}

	{% include 'pagination' %}
{% endblock -%}
