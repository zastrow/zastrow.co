---
layout-name: post_list
pagination:
  data: collections.posts
  size: 10
  alias: posts
  reverse: true
permalink: "posts/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber | plus: 1 }}/{% endif %}index.html"
---
{% layout "default-layout" %}

{%- block skip_links %}
{% endblock -%}

{%- block header %}
	{% include "header" %}
{% endblock -%}

{%- block main %}
<div class="obj-gradient-block">
	<div class="obj-gradient-block__interior">
		<div class="obj-width-listing">
			<div class="obj-gradient-block__content">
				<header>
					<h1 class="cmp-title">{{title}}</h1>
					{{if content}}
					<div>
						{{ content }}
					</div>
					{{end}}
				</header>
				<div class="util-margin-bottom-1xl">
					{% include 'pagination' %}
				</div>
				{%- for post in posts -%}
					<div class="cmp-article-item">
						<h2 class="cmp-article-item__title">
							<a href="{{ post.url }}" class="cmp-article-item__title-link">
								{{ post.data.title }}
							</a>
						</h2>
						<p class="cmp-meta">
								<time class="cmp-meta__date" datetime="{{ post.data.date | date: "%Y-%m-%d" }}">{{ post.data.date | date: "%d %B %Y" }}</time>
						</p>
					</div>
				{% endfor %}
				<div class="util-margin-bottom-1xl">
					{% include 'pagination' %}
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock -%}
