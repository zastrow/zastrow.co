---
layout-name: articles
---
{% layout "default-layout" %}

{%- block skip_links %}
{% endblock -%}
{%- block header %}
	{% include "header" %}
{% endblock -%}

{%- block main %}
<header>
	<h1 class="cmp-title">{{title}}</h1>
	{{if content}}
	<div>
		{{ content }}
	</div>
	{{end}}
</header>
{% for article in external_articles %}
	<h2>
		<a href="{{ article.link }}">
			{{ article.title }}
		</a>
	</h2>
	<p>
		<time datetime="{{ article.date | date: "%Y-%m-%d" }}">{{ article.date | date: "%d %B %Y" }}</time>
		{{ article.source }}
	</p>
	{% if article.additional_authors %}
		<p>
			Written in collaboration with
			{% for author in article.additional_authors %}
				{{ author }}
			{% endfor %}
		</p>
	{% endif %}
{% endfor %}
{% endblock -%}
