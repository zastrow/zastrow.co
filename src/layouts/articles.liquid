---
layout-name: articles
---
{% layout "default-layout" %}

{%- block skip_links %}
{% endblock -%}
{%- block header %}
	{% include "header" %}
{% endblock -%}

{%- block main %}
<div class="obj-gradient-block">
	<div class="obj-gradient-block__interior">
		<div class="obj-width-listing">
			<div class="obj-gradient-block__content">
				<header>
					<h1 class="cmp-title">{{title}}</h1>
					{{if content}}
					<div>
						{{ content }}
					</div>
					{{end}}
				</header>
				{% for article in external_articles %}
					<div class="cmp-article-item">
						<h2 class="cmp-article-item__title">
							<a class="cmp-article-item__title-link" href="{{ article.link }}">
								{{ article.title }}
							</a>
						</h2>
						<p class="cmp-article-item__meta">
							<time datetime="{{ article.date | date: "%Y-%m-%d" }}" class="cmp-article-item__date">{{ article.date | date: "%d %B %Y" }}</time>
							<span class="cmp-article-item__source">
								{{ article.source }}
							</span>
						</p>
						{% if article.additional_authors %}
							<p class="cmp-article-item__collaborators">
								Written in collaboration with
								{% for author in article.additional_authors %}
									{{ author }}
								{% endfor %}
							</p>
						{% endif %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
{% endblock -%}
