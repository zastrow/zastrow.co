---
layout-name: book_list
pagination:
  data: collections.books
  size: 10
  alias: books
  reverse: true
permalink: "books/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber | plus: 1 }}/{% endif %}index.html"
---
{% layout "default-layout" %}
{%- block skip_links %}
{% endblock -%}

{%- block header %}
	{% include "header" %}
{% endblock -%}

{%- block main %}
<div class="obj-gradient-block">
	<div class="obj-gradient-block__interior">
		<div class="obj-width-listing">
			<div class="obj-gradient-block__content">
				<header>
					<h1 class="cmp-title">{{title}}</h1>
					{{if content}}
					<div>
						{{ content }}
					</div>
					{{end}}
				</header>
				<div class="util-margin-bottom-1xl">
					{% include 'pagination' %}
				</div>
					{%- for post in books -%}
						<article class="cmp-post cmp-post--book cmp-post--writing">
							<div class="obj-width-book obj-width-writing">
								<header>
									<h2>
										<a href="{{ post.url }}">
											{{ post.data.title }}
										</a>
									</h2>
									<p class="cmp-meta">
										<time datetime="{{ post.data.date | date: "%Y-%m-%d" }}">{{ post.data.date | date: "%d %B %Y" }}</time>
									</p>
								</header>
								<div class="cmp-post__content">
									{{ post.content }}
								</div>
							</div>
						</article>
					{% endfor %}
					<div class="util-margin-bottom-1xl">
						{% include 'pagination' %}
					</div>
				</div>
		</div>
</div>
{% endblock -%}
